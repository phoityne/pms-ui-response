library
    -- Import common warning flags.
    ghc-options: -Wall -threaded

    -- Modules exported by the library.
    exposed-modules:  PMS.UI.Response.DM.Type,
                      PMS.UI.Response.DM.Constant,
                      PMS.UI.Response.DS.Utility,
                      PMS.UI.Response.App.Control,
                      PMS.UI.Response.DS.Core

    -- Modules included in this library but not exported.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    base,
                      data-default,
                      monad-logger,
                      mtl,
                      lens,
                      text,
                      safe-exceptions,
                      fast-logger,
                      stm,
                      transformers,
                      bytestring,
                      conduit,
                      aeson,
                      pms-domain-model

    -- Directories containing source files.
    hs-source-dirs:   src

    -- Base language which the package is written in.
    default-language: Haskell2010
    -- default-extensions:  LambdaCase

test-suite pms-ui-response-test
    -- Import common warning flags.
    ghc-options: -Wall -threaded

    -- Base language which the package is written in.
    default-language: Haskell2010

    -- Modules included in this executable, other than Main.
    other-modules:    PMS.UI.Response.App.ControlSpec

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions: 

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Spec.hs

    -- Test dependencies.
    build-depends:    base,
                      hspec,
                      hspec-discover,
                      data-default,
                      stm,
                      monad-logger,
                      async,
                      unix,
                      lens,
                      pms-domain-model,
                      pms-ui-response
    build-tool-depends:
      hspec-discover:hspec-discover
